{{#em-modal-form configName="bs" id="registerNewSatellite" open-if=openRegisterNewSatelliteModal on-submit="createSatellite" in-async=async}}

    {{#em-modal-title}}
        {{#em-modal-toggler class="close"}}
            <span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>
        {{/em-modal-toggler}}
        <h4 class="modal-title">New Subscription Management Application</h4>
    {{/em-modal-title}}

    {{#em-modal-body}}
        {{#if async}}
            Submitting, please wait...
        {{else}}
            {{text-f label="Name" value=newSatelliteName labelSize='col-md-4' inputSize='col-md-8' }}
        {{/if}}
    {{/em-modal-body}}

    {{#em-modal-footer}}
        {{#em-modal-toggler class="btn btn-default"}}Cancel{{/em-modal-toggler}}
        <button type="submit" class="btn btn-primary" disabled={{async}}>Register</button>
    {{/em-modal-footer}}

{{/em-modal-form}}
