{{#em-modal-form configName="bs"
                 id="namingSchemeModal"
                 open-if=isOpenNamingSchemeModal
                 close-if=isCloseNamingSchemeModal
                 on-submit="saveNamingScheme"
                 in-async=async}}

    {{#em-modal-title}}
        {{#em-modal-toggler class="close"}}
            <span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>
        {{/em-modal-toggler}}
        <h4 class="modal-title">Edit Naming Scheme</h4>
    {{/em-modal-title}}

    {{#em-modal-body}}
        {{#if async}}
            Submitting, please wait...
        {{else}}
            <p>
            Enforcing a naming scheme will ensure all selected hypervisors get named automatically and consistently.
            </p>

            <form class="form-horizontal">
              <div class="form-group">
                {{select-simple-f label='Host naming scheme'
                                  content=namingOptions
                                  value=hostNamingScheme
                                  disabled=isStarted
                                  labelSize='col-md-4'
                                  inputSize='col-md-5'}}

                {{#if isCustomScheme}}
                    {{text-f label='Prepend host names with'
                             value=customPreprendName
                             disabled=isStarted
                             placeholder='Enter custom prefix'
                             labelSize='col-md-4'
                             inputSize='col-md-5'}}

                    {{#base-f label='Three host example'
                              labelSize='col-md-4'}}
                              {{customPreprendName}}1<br />
                              {{customPreprendName}}2<br />
                              {{customPreprendName}}3<br />
                    {{/base-f}}
                {{/if}}

                {{#if isHypervisorN}}
                    {{#base-f label='Three host example' labelSize='col-md-4'}}
                        hypervisor1<br />
                        hypervisor2<br />
                        hypervisor3<br />
                    {{/base-f}}
                {{/if}}


              </div>
            </form>
        {{/if}}
    {{/em-modal-body}}

    {{#em-modal-footer}}
        <button {{action 'cancelNamingScheme'}} class="btn btn-default">Cancel</button>
        <button type="submit" class="btn btn-primary" disabled={{async}}>Edit</button>
    {{/em-modal-footer}}

{{/em-modal-form}}
